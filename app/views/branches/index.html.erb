<% if notice.present? %>
  <p class="alert alert-info"><%= notice %></p>
<% end %>

<div class="panel panel-default">
  <div class="panel-heading">Branches</div>
  <table class="table">
    <thead>
      <tr>
        <th>Store</th>
        <th>Branch Name</th>
        <th>Address</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @branches.each do |branch| %>
        <tr>
          <td><%= branch.store_name %></td>
          <td><%= link_to branch.name, branch %></td>
          <td><%= branch.address %></td>
          <td>
            <%= link_to edit_branch_path(branch), class: "btn btn-success" do %>
              <i class="fa fa-pencil-square-o" aria-hidden="true"></i> Edit
            <% end %>
          </td>
          <td>
            <%= link_to branch, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do %>
              <i class="fa fa-remove" aria-hidden="true"></i> Destroy
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to new_branch_path, class: "btn btn-info" do %>
  <i class="fa fa-plus" aria-hidden="true"></i> New Branch
<% end %>
