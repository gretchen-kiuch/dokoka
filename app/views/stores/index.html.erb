<% if notice.present? %>
  <p class="alert alert-info"><%= notice %></p>
<% end %>

<div class="panel panel-default">
  <div class="panel-heading">Stores</div>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @stores.each do |store| %>
        <tr>
          <td><%= store.name %></td>
          <td>
            <%= link_to edit_store_path(store), class: "btn btn-success" do %>
              <i class="fa fa-pencil-square-o" aria-hidden="true"></i> Edit
            <% end %>
          </td>
          <td>
            <%= link_to store, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do %>
              <i class="fa fa-remove" aria-hidden="true"></i> Destroy 
            <% end %>    
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to new_store_path, class: "btn btn-info" do %>
  <i class="fa fa-plus" aria-hidden="true"></i> New Store
<% end %>
