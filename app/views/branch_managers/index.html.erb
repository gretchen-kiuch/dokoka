<% if notice.present? %>
  <p class="alert alert-info"><%= notice %></p>
<% end %>

<div class="panel panel-default">
  <div class="panel-heading">Branch Managers</div>
  <table class="table">
    <thead>
      <tr>
        <th>Email</th>
        <th>Name</th>
        <th>Branch</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @branch_managers.each do |bm| %>
        <tr>
          <td><%= bm.email %></td>
          <td><%= "#{bm.first_name} #{bm.last_name}".titleize %></td>
          <td><%= bm.branch_name %></td>
          <td>
            <%= link_to edit_branch_manager_path(bm), class: "btn btn-success" do %>
              <i class="fa fa-pencil-square-o" aria-hidden="true"></i> Edit
            <% end %>
          </td>
          <td>
            <%= link_to branch_manager_path(bm), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do %>
              <i class="fa fa-remove" aria-hidden="true"></i> Destroy
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to new_branch_manager_path, class: "btn btn-info" do %>
  <i class="fa fa-plus" aria-hidden="true"></i> New Branch manager
<% end %>
